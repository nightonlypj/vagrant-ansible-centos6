/var/log/nginx/*log {
    daily
### START ###
#    rotate 10
{% if hosts_env == 'development' or hosts_env == 'test' %}
    rotate 7
{% else %}
    rotate 90
{% endif %}
### END ###
    missingok
    notifempty
### START ###
#    compress
### END ###
    sharedscripts
    postrotate
        /bin/kill -USR1 $(cat /var/run/nginx.pid 2>/dev/null) 2>/dev/null || :
    endscript
}
